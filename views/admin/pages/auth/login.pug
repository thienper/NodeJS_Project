extends ../../layouts/auth.pug
include ../../mixins/alert.pug
block main

  +alert-error(5000)
  +alert-success(5000)
  .container.login.my-5
    .cover-login
      .row.justify-content-center
        .col-4
        .col-4
          h1(class="text-center") Đăng nhập 
          form(
            action= `${prefixAdmin}/auth/login`
            method="POST"
          )
            div(class="form-group")
              label(for="email") Email
              input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
              )
            div(class="form-group")
              label(for="password") Mật khẩu
              input(
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
              )
            div(class="form-group")
              button(
                type="submit"
                class="btn btn-primary btn-block"
              ) Đăng nhập
        .col-4
        