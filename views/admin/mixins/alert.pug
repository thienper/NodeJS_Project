mixin alert-success(time)
    - if (messages.success)
      .message.info
      div(
        class=" alert alert-success" 
        show-alert
        data-time="2000"
        )
        span= messages.success
          span(close-alert) X

mixin alert-error
    - if (messages.error)
      .message.info
      div(
        class=" alert alert-danger" 
        show-alert
        data-time="2000"
        )
        span= messages.error
          span(close-alert) X